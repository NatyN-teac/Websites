@model BHSM.Areas.Admin.Models.RegisterViewModel
@{
    ViewBag.Title = "RegisterRole";
    Layout = "~/Areas/Admin/Views/Shared/_Super.cshtml";
}

<h2>RegisterRole</h2>

@using(Html.BeginForm("RegisterRole","Account",FormMethod.Post,new { @class="form-horizontal",role="form"})) {
 @Html.AntiForgeryToken();
  <h4>Create a New Account</h4>

  <hr />
  @Html.ValidationSummary("",new { @class="text-danger" })

    <div class="form-group">
        @Html.Label("select Role", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @*@Html.DropDownList("UserName")*@
            @Html.DropDownListFor(m => m.RoleName, ViewBag.UserName as IEnumerable<SelectListItem>, "Select User", new { @class = "form-control" })

        </div>
    </div>

    <div class="form-group">
        @Html.Label("select User", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          @*  @Html.DropDownList("Name")*@
            @Html.DropDownListFor(m => m.Name, ViewBag.Name as IEnumerable<SelectListItem>, "Select Role", new { @class = "form-control" })




        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Register" class="btn btn-default" />
        </div>
    </div>


   

}


