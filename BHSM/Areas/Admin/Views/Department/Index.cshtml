@model IEnumerable<BHSM.Areas.Admin.Models.Department>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_DepartmentOnly.cshtml";
}


<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DepartmentName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dep_Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dep_Related_Article)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dep_ImagePath)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DepartmentName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dep_Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dep_Related_Article)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dep_ImagePath)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
