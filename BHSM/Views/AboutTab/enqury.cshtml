@model BHSM.Models.EnqueryTable

@{
    ViewBag.Title = "enqury";
    Layout = "~/Views/Shared/_NotDepartment.cshtml";
}


<div class="aboutTab-head">
    <h2>Ask</h2>
</div>
<div class="cont-enq_page">

    <div class="col-md-5">
        <div class="form-container-enq">
            <div class="enq_header">
                <h2>Enquery form</h2>
            </div>

            @using (Html.BeginForm("Send", "AboutTab", FormMethod.Post, new { onSubmit = "return SubmitToContr(this);" }))
            
            {

                <div class="form-group">
                    @Html.LabelFor(m => m.FirstName)
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", Placeholder = "Enter Your First Name" })
                    @Html.ValidationMessageFor(m => m.FirstName)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.SecondName)
                    @Html.TextBoxFor(m => m.SecondName, new { @class = "form-control", Placeholder = "Enter Your Last Name" })
                    @Html.ValidationMessageFor(m => m.SecondName)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email)
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", Placeholder = "Enter Your Email" })
                    @Html.ValidationMessageFor(m => m.Email)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.DateTime)
                    @Html.TextBoxFor(m => m.DateTime, new { @class = "form-control", Placeholder = "eg. 20-Oct-2018" })
                    @Html.ValidationMessageFor(m => m.DateTime)
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.location)
                    @Html.TextBoxFor(m => m.location, new { @class = "form-control", Placeholder = "eg. Ethiopia" })
                    @Html.ValidationMessageFor(m => m.location)

                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Question)
                    @Html.TextAreaFor(m => m.Question, new { @class = "form-control", Placeholder = "What is your question?" })
                    @Html.ValidationMessageFor(m => m.Question)

                </div>

                <button type="Submit" class="btn btn-primary btn-md">Submit</button>

            }
        </div>


    </div>
    <div class="col-md-7">

        <div class="total_holder">
            <h2>Recently Answered Question</h2>
            <div class="holder-answ">

                <div class="col-md-3">
                    <div class="colored-enq">
                        <div class="feb_bue">
                            <h5>20-Feb | 2018</h5>
                            <p>Answer</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="colored-enq-body">
                        <h4>This is the Question Asked by End user </h4>
                        <small style="text-align:right;">
                            <cite title="Addis Ababa, Ethiopia">
                                Addis Ababa, Ethiopia <i class="glyphicon glyphicon-map-marker">
                                </i>
                            </cite>
                        </small>
                        <div class="answer-enq">
                            <p>This is the answer for your question please contact www.gmail.com/helloworldl</p>
                            <h6 id="styleIdperson" class="pull-right">First Name</h6>
                        </div>
                        <hr style="border:1px solid #2e6fc6;" />







                    </div>
                </div>
                <br /><br />

            </div>

            <div class="holder-answ">

                <div class="col-md-3">
                    <div class="colored-enq">
                        <div class="feb_bue">
                            <h5>20-Feb | 2018</h5>
                            <p>Answer</p>

                        </div>
                    </div>
                </div>
                <div class="col-md-9">
                    <div class="colored-enq-body">
                        <h4>This is the Question Asked by End user </h4>
                        <small style="text-align:right;">
